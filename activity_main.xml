<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addBTN"
        android:text="@string/add"
        tools:layout_editor_absoluteX="299dp"
        tools:layout_editor_absoluteY="422dp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="nineBTN"
        android:text="@string/nine"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="569dp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="multiplyBTN"
        android:text="@string/multiply"
        tools:layout_editor_absoluteX="299dp"
        tools:layout_editor_absoluteY="521dp" />

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="threeBTN"
        android:text="@string/three"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="471dp" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fiveBTN"
        android:text="@string/five"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="521dp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="divideBTN"
        android:text="@string/divide"
        tools:layout_editor_absoluteX="299dp"
        tools:layout_editor_absoluteY="569dp" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sixBTN"
        android:text="@string/six"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="521dp" />

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:onClick="fourBTN"
        android:text="@string/four"
        app:layout_constraintTop_toBottomOf="@+id/one"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/equals"
        android:layout_width="186dp"
        android:layout_height="43dp"
        android:onClick="equalsBTN"
        android:text="@string/equals"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="618dp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="eightBTN"
        android:text="@string/eight"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="569dp" />

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="twoBTN"
        android:text="@string/two"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="471dp" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="subtractBTN"
        android:text="@string/subtract"
        tools:layout_editor_absoluteX="299dp"
        tools:layout_editor_absoluteY="471dp" />

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="oneBTN"
        android:text="@string/one"
        app:layout_constraintStart_toStartOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sevenBTN"
        android:text="@string/seven"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="569dp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="zeroBTN"
        android:text="@string/zero"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="617dp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:onClick="clearBTN"
        android:text="@string/clear"
        app:layout_constraintBottom_toTopOf="@+id/three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add" />

    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="false"
        android:inputType="none"
        android:text="@string/display"
        android:textAlignment="textEnd"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>